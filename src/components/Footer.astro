---
import { Facebook, Instagram, MessageCircle } from "lucide-react";
---

<footer class="bg-amber-900 text-amber-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div
            class="flex flex-col md:flex-row justify-between items-center gap-4"
        >
            <!-- Social Media Links -->
            <div class="flex items-center gap-4">
                <a
                    href="https://facebook.com"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="hover:text-amber-300 transition-colors"
                    aria-label="Facebook"
                >
                    <Facebook size={24} />
                </a>
                <a
                    href="https://instagram.com"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="hover:text-amber-300 transition-colors"
                    aria-label="Instagram"
                >
                    <Instagram size={24} />
                </a>
            </div>

            <!-- Copyright -->
            <p class="text-center">
                &copy; 2025 Southern Bakery. Todos los derechos reservados.
            </p>

            <!-- WhatsApp Chatbot -->
            <a
                href="https://wa.me/1234567890"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-full transition-colors"
                aria-label="WhatsApp"
            >
                <MessageCircle size={24} />
                <span>WhatsApp</span>
            </a>
        </div>
    </div>
</footer>
