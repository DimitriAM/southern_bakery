---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import { ChevronRight } from "lucide-react";
---

<Layout title="Southern Bakery - Pan Artesanal">
    <Navigation />

    <main>
        <!-- Hero Section -->
        <section
            class="relative h-[600px] flex items-center justify-center overflow-hidden"
        >
            <img
                src="https://images.unsplash.com/photo-1627308593341-d886acdc06a2?w=1200&q=80&fm=webp"
                alt="Pan artesanal"
                class="absolute inset-0 w-full h-full object-cover"
                width="1200"
                height="600"
                fetchpriority="high"
                decoding="async"
            />
            <div class="absolute inset-0 bg-black/60"></div>
            <div class="relative z-10 text-center text-white px-4">
                <h1 class="text-5xl md:text-6xl mb-4 font-bold">
                    Bienvenidos a Southern Bakery
                </h1>
                <p class="text-xl md:text-2xl mb-8">
                    Pan artesanal horneado con amor cada día
                </p>
                <a
                    href="/productos"
                    class="inline-flex items-center gap-2 bg-amber-600 hover:bg-amber-700 text-white px-8 py-3 rounded-lg transition-colors"
                >
                    Descubre Nuestros Productos
                    <ChevronRight size={20} />
                </a>
            </div>
        </section>

        <!-- Featured Products -->
        <section class="py-16 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
            <h2 class="text-4xl text-center mb-12 text-amber-900 font-bold">
                Nuestros Productos Destacados
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div
                    class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow"
                >
                    <img
                        src="https://images.unsplash.com/photo-1627308593341-d886acdc06a2?w=400&q=75&fm=webp"
                        alt="Panes Artesanales"
                        class="w-full h-64 object-cover"
                        width="400"
                        height="256"
                        loading="lazy"
                        decoding="async"
                    />
                    <div class="p-6">
                        <h3 class="text-2xl mb-2 text-amber-900 font-semibold">
                            Panes Artesanales
                        </h3>
                        <p class="text-gray-600">
                            Horneados frescos cada mañana con ingredientes
                            naturales y masa madre tradicional.
                        </p>
                    </div>
                </div>
                <div
                    class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow"
                >
                    <img
                        src="https://images.unsplash.com/photo-1571157577110-493b325fdd3d?w=400&q=75&fm=webp"
                        alt="Pastelería Fina"
                        class="w-full h-64 object-cover"
                        width="400"
                        height="256"
                        loading="lazy"
                        decoding="async"
                    />
                    <div class="p-6">
                        <h3 class="text-2xl mb-2 text-amber-900 font-semibold">
                            Pastelería Fina
                        </h3>
                        <p class="text-gray-600">
                            Croissants, pasteles y dulces elaborados con
                            mantequilla de primera calidad.
                        </p>
                    </div>
                </div>
                <div
                    class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow"
                >
                    <img
                        src="https://images.unsplash.com/photo-1763440976454-c70c217792bb?w=400&q=75&fm=webp"
                        alt="Productos Especiales"
                        class="w-full h-64 object-cover"
                        width="400"
                        height="256"
                        loading="lazy"
                        decoding="async"
                    />
                    <div class="p-6">
                        <h3 class="text-2xl mb-2 text-amber-900 font-semibold">
                            Productos Especiales
                        </h3>
                        <p class="text-gray-600">
                            Tortas personalizadas y productos de temporada para
                            ocasiones especiales.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Call to Action -->
        <section
            class="bg-amber-900 text-amber-50 py-16 px-4 sm:px-6 lg:px-8 border-b-2 border-amber-700"
        >
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-4xl mb-4 font-bold">Visítanos Hoy</h2>
                <p class="text-xl mb-8">
                    Descubre el sabor de la tradición en cada bocado
                </p>
                <p class="text-lg">
                    Abierto de Lunes a Sábado: 7:00 AM - 7:00 PM
                </p>
                <p class="text-lg">Domingos: 8:00 AM - 2:00 PM</p>
            </div>
        </section>
    </main>

    <Footer />
</Layout>
