---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import { ShoppingBag, Cake, Cookie, Truck, Users, Clock } from "lucide-react";

const services = [
    {
        icon: "shopping-bag",
        title: "Panadería Diaria",
        description:
            "Pan fresco horneado varias veces al día. Contamos con una gran variedad de panes artesanales, integrales y especiales.",
    },
    {
        icon: "cake",
        title: "Tortas Personalizadas",
        description:
            "Creamos tortas únicas para cumpleaños, bodas y eventos especiales. Diseños personalizados según tus necesidades.",
    },
    {
        icon: "cookie",
        title: "Pastelería",
        description:
            "Amplia variedad de pasteles, tartas y dulces elaborados artesanalmente con ingredientes de primera calidad.",
    },
    {
        icon: "truck",
        title: "Entregas a Domicilio",
        description:
            "Llevamos nuestros productos frescos directamente a tu hogar o evento. Pedidos con anticipación.",
    },
    {
        icon: "users",
        title: "Catering para Eventos",
        description:
            "Servicio completo de catering para reuniones, conferencias y celebraciones con menús personalizados.",
    },
    {
        icon: "clock",
        title: "Pedidos Anticipados",
        description:
            "Realiza tu pedido con anticipación y garantiza la disponibilidad de tus productos favoritos.",
    },
];
---

<Layout
    title="Servicios - Southern Bakery"
    description="Conoce todos los servicios que ofrecemos en Southern Bakery"
>
    <Navigation />

    <main class="py-16 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-16">
            <h1 class="text-5xl mb-4 text-amber-900 font-bold">
                Nuestros Servicios
            </h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                En Southern Bakery ofrecemos una amplia gama de servicios para
                satisfacer todas tus necesidades de panadería y pastelería.
            </p>
        </div>

        <!-- Services Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
            {
                services.map((service) => (
                    <div class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow">
                        <div class="text-amber-700 mb-4">
                            {service.icon === "shopping-bag" && (
                                <ShoppingBag size={48} />
                            )}
                            {service.icon === "cake" && <Cake size={48} />}
                            {service.icon === "cookie" && <Cookie size={48} />}
                            {service.icon === "truck" && <Truck size={48} />}
                            {service.icon === "users" && <Users size={48} />}
                            {service.icon === "clock" && <Clock size={48} />}
                        </div>
                        <h2 class="text-2xl mb-3 text-amber-900 font-semibold">
                            {service.title}
                        </h2>
                        <p class="text-gray-600">{service.description}</p>
                    </div>
                ))
            }
        </div>

        <!-- Special Offer Section -->
        <div class="bg-amber-100 rounded-lg p-8 md:p-12">
            <div class="flex flex-col md:flex-row items-center gap-8">
                <img
                    src="https://images.unsplash.com/photo-1726981897420-0778c14deedf?w=600"
                    alt="Interior de la panadería"
                    class="w-full md:w-1/2 rounded-lg shadow-lg"
                    loading="lazy"
                />
                <div class="flex-1">
                    <h2 class="text-3xl mb-4 text-amber-900 font-bold">
                        ¿Por Qué Elegirnos?
                    </h2>
                    <ul class="space-y-4">
                        <li class="flex items-start gap-3">
                            <span class="text-amber-700 mt-1 text-xl">✓</span>
                            <span
                                >Más de 20 años de experiencia en panadería
                                artesanal</span
                            >
                        </li>
                        <li class="flex items-start gap-3">
                            <span class="text-amber-700 mt-1 text-xl">✓</span>
                            <span
                                >Ingredientes 100% naturales y de la más alta
                                calidad</span
                            >
                        </li>
                        <li class="flex items-start gap-3">
                            <span class="text-amber-700 mt-1 text-xl">✓</span>
                            <span
                                >Procesos tradicionales combinados con
                                innovación</span
                            >
                        </li>
                        <li class="flex items-start gap-3">
                            <span class="text-amber-700 mt-1 text-xl">✓</span>
                            <span
                                >Atención personalizada y dedicada a cada
                                cliente</span
                            >
                        </li>
                        <li class="flex items-start gap-3">
                            <span class="text-amber-700 mt-1 text-xl">✓</span>
                            <span
                                >Compromiso con la comunidad y el medio ambiente</span
                            >
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </main>

    <Footer />
</Layout>
