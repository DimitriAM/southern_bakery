---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import ContactForm from "../components/ContactForm";
---

<Layout
    title="Contacto - Southern Bakery"
    description="Contáctanos para pedidos, consultas o simplemente para saludar"
>
    <Navigation />

    <main class="py-16 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-16">
            <h1 class="text-5xl mb-4 text-amber-900 font-bold">Contacto</h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                Estamos aquí para atenderte. Contáctanos para pedidos, consultas
                o simplemente para saludar.
            </p>
        </div>

        <div class="max-w-2xl mx-auto">
            <!-- Contact Form -->
            <div>
                <h2 class="text-3xl mb-8 text-amber-900 font-bold">
                    Envíanos un Mensaje
                </h2>
                <ContactForm client:load />
            </div>
        </div>
    </main>

    <Footer />
</Layout>
